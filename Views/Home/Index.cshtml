@{
    ViewData["Title"] = "Página principal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Control</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticaSupervisada.styles.css" asp-append-version="true" />

</head>
<div style="margin-top:100px;">
    <body>
    <div class="container py-5">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="row justify-content-center g-4">
                <div class="col-12 col-lg-6">
                    <div class="card card-section h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="section-title">
                                <h3 class="fw-bold text-primary">
                                    <i class="fas fa-clipboard-check me-2"></i>Asistencias
                                </h3>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                                <a asp-controller="Asistencias" asp-action="Index" class="btn btn-primary btn-action">
                                    <i class="fas fa-list me-2"></i>Ver registros
                                </a>
                                <a asp-controller="Asistencias" asp-action="Create" class="btn btn-outline-secondary btn-action">
                                    <i class="fas fa-plus me-2"></i>Agregar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="card card-section h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="section-title">
                                <h3 class="fw-bold text-primary">
                                    <i class="fas fa-tint me-2"></i>Bidones
                                </h3>
                            </div>
                            <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                                <a asp-controller="Bidones" asp-action="Index" class="btn btn-primary btn-action">
                                    <i class="fas fa-list me-2"></i>Ver registros
                                </a>
                                <a asp-controller="Bidones" asp-action="Create" class="btn btn-outline-secondary btn-action">
                                    <i class="fas fa-plus me-2"></i>Agregar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</div>
</html>