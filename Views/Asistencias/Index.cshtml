@model IEnumerable<PracticaSupervisada.Models.Asistencia>
@using System.Globalization;

@{
    ViewData["Title"] = "Asistencia limpieza";
    TimeSpan? horasTrabajadas = ViewBag.HorasTrabajadas as TimeSpan?;
    int? mesSeleccionado = ViewBag.MesSeleccionado as int?;
    int? anioSeleccionado = ViewBag.AnioSeleccionado as int?;
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">


<div style="margin-top:100px;">

    <div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Planilla de asistencia</h1>
        </div>
        <div class="col-md-4 text-right">
            <form asp-action="Create" method="get">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-plus"></i> Agregar Nuevo
                </button>
            </form>
        </div>
    </div>

    <div class="filtros-container">
        <form asp-action="Index" method="get" class="row g-3 align-items-center row col-12">
                <div class="row g-2">
                    <div class="col-12 col-md-auto">
                        <label for="Busqmes" class="form-label">Mes:</label>
                        <select id="Busqmes" class="form-select form-select-sm" name="Busqmes" onchange="this.form.submit()">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Busqmes != null && ViewBag.Busqmes == i)">
                                    @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-12 col-md-auto">
                        <label for="Busqanio" class="form-label">Año:</label>
                        <select id="Busqanio" class="form-select form-select-sm" name="Busqanio" onchange="this.form.submit()">
                            @for (int i = 2023; i <= DateTime.Now.Year; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Busqanio != null && ViewBag.Busqanio == i)">
                                    @i
                                </option>
                            }
                        </select>
                    </div>
                </div>

            @if (horasTrabajadas.HasValue && mesSeleccionado.HasValue && anioSeleccionado.HasValue)
            {
                <div class="col-12 text-center mt-2 mt-md-0">
                    <div id="resultado-horas">
                        <h4 class="mb-0">
                            <i class="fas fa-clock"></i> Horas trabajadas en @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(mesSeleccionado.Value) @anioSeleccionado.Value:
                            <strong>@Math.Floor(horasTrabajadas.Value.TotalHours):@horasTrabajadas.Value.Minutes.ToString("00") hs</strong>
                        </h4>
                    </div>
                </div>
            }
        </form>
    </div>

    <table id="asistenciaTable" class="table table-striped table-bordered nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Hora Entrada</th>
                <th>Hora Salida</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre_Apellido)</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@ConvertToNewTimeFormat(item.Tiempo_Entrada)</td>
                    <td>@ConvertToNewTimeFormat(item.Tiempo_Salida)</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <form asp-action="Edit" method="get" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-info btn-action">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </form>
                            <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="return confirmarEliminar(this)">
                                <button type="submit" class="btn btn-danger btn-action">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
}
@functions {
    private string ConvertToNewTimeFormat(TimeOnly time)
    {
        if (time < new TimeOnly(12, 0))
        {
            time = time.AddHours(12);
        }
        return time.ToString("HH:mm");
    }
}